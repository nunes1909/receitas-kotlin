<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".presenter.ui.view.FormularioReceita">

        <ImageView
            android:id="@+id/formulario_receita_imagem"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:background="@color/colorImageBackg"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/formulario_receita_fab_cam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:src="@drawable/ic_action_photo"
            app:layout_constraintBottom_toBottomOf="@id/formulario_receita_imagem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/formulario_receita_imagem" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/formulario_receita_fab_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:src="@drawable/ic_action_album"
            app:layout_constraintBottom_toBottomOf="@id/formulario_receita_imagem"
            app:layout_constraintEnd_toStartOf="@id/formulario_receita_fab_cam"
            app:layout_constraintTop_toBottomOf="@id/formulario_receita_imagem" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/colorSecondaryVariant"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/formulario_receita_imagem"
            app:layout_constraintBottom_toBottomOf="@id/formulario_receita_imagem">

            <Switch
                android:id="@+id/formulario_receita_switch"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textStyle="bold|italic"
                android:textColor="@color/colorOnSecondary"
                android:text="Exibir esta imagem na listagem?"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </androidx.cardview.widget.CardView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/formulario_receita_layout_titulo"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:helperText="Obrigatório*"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/formulario_receita_fab_cam">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/formulario_receita_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Título da receita"
                android:inputType="textCapWords"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/formulario_receita_layout_tipo"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:hint="Tipo"
            android:paddingBottom="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:helperText="Obrigatório*"
            app:layout_constraintEnd_toStartOf="@id/formulario_receita_layout_nivel"
            app:layout_constraintStart_toStartOf="@id/formulario_receita_layout_titulo"
            app:layout_constraintTop_toBottomOf="@id/formulario_receita_layout_titulo">

            <AutoCompleteTextView
                android:id="@+id/formulario_receita_tipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/formulario_receita_layout_nivel"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Nível"
            android:paddingBottom="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:helperText="Obrigatório*"
            app:layout_constraintEnd_toEndOf="@+id/formulario_receita_layout_titulo"
            app:layout_constraintStart_toEndOf="@id/formulario_receita_layout_tipo"
            app:layout_constraintTop_toBottomOf="@id/formulario_receita_layout_titulo">

            <AutoCompleteTextView
                android:id="@+id/formulario_receita_nivel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/formulario_receita_layout_ingrediente"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="150dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:helperText="Opicional"
            app:layout_constraintEnd_toEndOf="@+id/formulario_receita_layout_nivel"
            app:layout_constraintStart_toStartOf="@+id/formulario_receita_layout_tipo"
            app:layout_constraintTop_toBottomOf="@id/formulario_receita_layout_tipo">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/formulario_receita_ingrediente"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Ingredientes"
                android:inputType="textMultiLine"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/formulario_receita_layout_preparo"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="30dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:helperText="Opicional"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/formulario_receita_layout_ingrediente"
            app:layout_constraintStart_toStartOf="@id/formulario_receita_layout_ingrediente"
            app:layout_constraintTop_toBottomOf="@id/formulario_receita_layout_ingrediente">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/formulario_receita_preparo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Modo de Preparo"
                android:inputType="textMultiLine"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>